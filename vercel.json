{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.10",
        "installCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && . ~/.bashrc && uv pip sync"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "CORS_ORIGINS": "https://documentbot-agent.vercel.app,https://documentbot-agent-git-main-toshiyan76.vercel.app,https://documentbot-agent-toshiyan76.vercel.app"
  }
}
